# ===========================================
# ProGear Sales AI - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# -------------------------------------------
# LLM Configuration
# -------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# -------------------------------------------
# Okta Configuration (Governance)
# -------------------------------------------
OKTA_DOMAIN=https://your-org.oktapreview.com
OKTA_CLIENT_ID=0oaxxxxxxxxx
OKTA_CLIENT_SECRET=xxxxxxxxxxxxxxx
OKTA_ISSUER=https://your-org.oktapreview.com/oauth2/default

# AI Agent Registration (from Okta Admin Console > Directory > AI Agents)
OKTA_AI_AGENT_ID=agt_xxxxxxxxx
OKTA_AI_AGENT_PRIVATE_KEY={"kty":"RSA","kid":"xxx",...}

# Custom Authorization Server (for MCP resources)
OKTA_CUSTOM_AUTH_SERVER_ID=ausxxxxxxxxx
OKTA_CUSTOM_AUTH_SERVER_AUDIENCE=https://progear-mcp.example.com

# -------------------------------------------
# Auth0 Configuration (Builder Features)
# -------------------------------------------
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=xxxxxxxxxxxxxxx
AUTH0_CLIENT_SECRET=xxxxxxxxxxxxxxx

# Auth0 FGA (Fine-Grained Authorization)
FGA_STORE_ID=xxxxxxxxxxxxxxx
FGA_CLIENT_ID=xxxxxxxxxxxxxxx
FGA_CLIENT_SECRET=xxxxxxxxxxxxxxx
FGA_API_URL=https://api.us1.fga.dev

# Auth0 Token Vault (for third-party APIs)
# Configured per-connection in Auth0 Dashboard

# -------------------------------------------
# Frontend Configuration (Next.js)
# -------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-random-secret-here

# Public vars (exposed to browser)
NEXT_PUBLIC_OKTA_CLIENT_ID=0oaxxxxxxxxx
NEXT_PUBLIC_OKTA_DOMAIN=https://your-org.oktapreview.com
NEXT_PUBLIC_OKTA_ISSUER=https://your-org.oktapreview.com/oauth2/default
NEXT_PUBLIC_API_URL=http://localhost:8000

# -------------------------------------------
# Backend Configuration (FastAPI)
# -------------------------------------------
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000

# -------------------------------------------
# MCP Server Configuration
# -------------------------------------------
MCP_SERVER_URL=http://localhost:3001
MCP_SERVER_PORT=3001

# -------------------------------------------
# Deployment URLs (update after deploying)
# -------------------------------------------
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com
# MCP_SERVER_URL=https://your-mcp.onrender.com
# NEXTAUTH_URL=https://your-app.vercel.app
